<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.petvaccine.app.view.VacinaDetalhesFragment">

    <TextView android:id="@+id/vacina_detalhes_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vacina_detalhes_titulo"
        style="@style/AppTitleText" />

    <ListView
        android:id="@+id/vacina_detalhes_lista_doses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".5" />

    <TextView android:id="@+id/vacina_detalhes_info_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="@string/vacina_detalhes_info_titulo"
        style="@style/AppTitleText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5" >

        <TextView android:id="@+id/vacina_detalhes_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

        <ProgressBar
            android:id="@+id/vacina_detalhes_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminate="true" />

    </RelativeLayout>

</LinearLayout>